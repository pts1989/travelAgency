@page "/overzicht"

<PageTitle>Reisoverzicht</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow border-0 mb-4">
                <div class="card-body p-4">
                    <h2 class="mb-3 text-primary">Jouw Reisoverzicht</h2>
                    <p class="mb-4">Hier verschijnen straks je geplande reizen, inclusief dagindeling, kosten en boekingsstatus. Start een chat om je eerste reis te plannen!</p>
                    <div class="alert alert-warning text-center">
                        <i class="bi bi-info-circle"></i> Je hebt nog geen reizen gepland.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
